@model IEnumerable<AlphaScheduler.Models.Sede>

@{
    ViewBag.Title = "Facultad";
}

@section scripts{

     <script src="~/Scripts/Proyecto/Facultad.js"></script>

}

<h2>Facultad</h2>

  <div id="form">
        <form id="formContainer">
            <div>
                <span>Nombre de la sede</span>
                    <select name="FK_Id_Sede" id="FK_Id_Sede">

                        @foreach(var i in Model.ToList()) {
                    <option value="@i.Id_Sede">@i.Nombre</option>
                        }
                </select>
            </div>
            <div>
                <span>Nombre de la facultad</span>
                <input type="text" id="Nombre" name="Nombre" />
            </div>
            <div>
                <a id="btnEnviar" class="link" href="#"><span>Enviar</span></a>
            </div>
            </form>
      </div>

 @if(@ViewBag.facultad != null){
<div id="Details">
    <h4>DETALLES</h4>
    <table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-bordered" id="tableDetails">
        <thead>
            <tr>
                 <td><strong>Id facultad</strong></td>
                <td><strong>Nombre facultad</strong></td>
                <td><strong>Nombre sede</strong></td>

            </tr>

        </thead>
        @foreach (var i in ViewBag.facultad)
        {
            <tr>
                <td>
                    @i.Id_Facultad
                </td>
                <td>
                    @i.Nombre
                </td>
                <td>
                    @i.nombreSede
                </td>

            </tr>
        }
    </table>
</div>
}else{
        <h3>No existen datos que Mostrar </h3>
}


