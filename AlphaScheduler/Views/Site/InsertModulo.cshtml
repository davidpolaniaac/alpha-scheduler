@model AlphaScheduler.Models.ViewMateria

@{
    ViewBag.Title = "Modulo";
}
@section scripts{

    <script src="~/Scripts/Proyecto/insertModulo.js"></script>

}
<div id="containerDetail">
    <h2>Detalle de materia: @Model.Nombre</h2>

    <table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-bordered">
        <tr>
            <td><strong>Materia</strong></td>
            <td>@Model.Nombre</td>
        </tr>
        <tr>
            <td><strong>Programa</strong></td>
            <td>@Model.nombrePrograma</td>
        </tr>
    </table>
</div>

<div id="form">
    <form id="formContainer">
          <div>
            <span>Id pensum </span>
            <input type="text" id="FK_Id_Materia" name="FK_Id_Materia" value="@Model.Id_Materia" />
        </div>
        <div>
            <span>Nombre </span>
            <input type="text" id="Nombre" name="Nombre" />
        </div>
        <div>
            <a id="btnEnviar" class="link" href="#"><span>Enviar</span></a>
        </div>
    </form>
</div>
@if (@ViewBag.modulo!= null)
{
    <div id="Details">
        <h4>DETALLES</h4>
        <table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-bordered" id="tableDetails">
            <thead>
                <tr>
                    <td><strong>Nombre</strong></td>


                </tr>

            </thead>
            @foreach (var i in ViewBag.modulo)
            {
                <tr>
                    <td>
                        @i.Nombre
                    </td>

                </tr>
            }
        </table>
    </div>
}
else
{
    <h3>No existen datos que Mostrar </h3>
}
