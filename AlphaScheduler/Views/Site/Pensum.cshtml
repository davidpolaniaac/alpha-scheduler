@model IEnumerable<AlphaScheduler.Models.ViewLinea>
@{
    ViewBag.Title = "Pensum";
}

@section scripts{

    <script src="~/Scripts/Proyecto/Pensum.js"></script>
    <script>
        var linea = JSON.stringify(@Html.Raw(Json.Encode(Model)));
        var programa = JSON.stringify(@Html.Raw(Json.Encode(ViewBag.programa)));
        var facultad = JSON.stringify(@Html.Raw(Json.Encode(ViewBag.facultad)));
    </script>
}
<h2>Pensum</h2>

<span>Sede </span>
<select name="sede" id="sede">
    <option value="">Seleccionar</option>
    @foreach (var i in ViewBag.sede)
    {
        <option value="@i.Id_Sede">@i.Nombre</option>
    }

</select>
<div id="facultad">
</div>
<div id="programa">
</div>
<div id="form">
    <form id="formContainer">
        <div id="linea">
        </div>
        <div>
            <span>Nombre del Pensum </span>
            <input type="text" id="Nombre" name="Nombre" />
        </div>
        <div>
            <span>Codigo del Pensum </span>
            <input type="text" id="Codigo" name="Codigo" />
        </div>
        <div>
            <span>Semestres </span>
            <input type="text" id="numSemestre" name="numSemestre" />
        </div>
        <div>
            <a id="btnEnviar" class="link" href="#"><span>Enviar</span></a>
        </div>
    </form>
</div>

@if (@ViewBag.pensum != null)
{
    <div id="Details">
        <h4>DETALLES</h4>
        <table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-bordered" id="tableDetails">
            <thead>
                <tr>
                    <td><strong>Id Pensum</strong></td>
                    <td><strong>Codigo Pensum </strong></td>
                    <td><strong>Nombre Pensum</strong></td>
                    <td><strong>Nombre Linea</strong></td>
                    <td><strong>Nombre Programa</strong></td>
                    <td><strong>Nombre facultad</strong></td>
                    <td><strong>Nombre sede</strong></td>
                    <td><strong>Agregar Materias</strong></td>

                </tr>

            </thead>
            @foreach (var i in ViewBag.pensum)
            {
                <tr>
                    <td>
                        @i.Id_Pensum
                    </td>
                    <td>
                        @i.Codigo
                    </td>
                    <td>
                        @i.Nombre
                    </td>
                    <td>
                        @i.nombreLinea
                    </td>
                    <td>
                        @i.nombrePrograma
                    </td>
                    <td>
                        @i.nombreFacultad
                    </td>
                    <td>
                        @i.nombreSede
                    </td>
                    <td>@Html.ActionLink("Agregar Materias", "InsertMaterias", new { id = i.Id_Pensum })</td>

                </tr>
            }
        </table>
    </div>
}
else
{
    <h3>No existen datos que Mostrar </h3>
}



