@model IEnumerable<AlphaScheduler.Models.ViewMateria>
@{
    ViewBag.Title = "Linea";
}

@section scripts{

    <script src="~/Scripts/Proyecto/Materia.js"></script>
    <script>
        var programa = JSON.stringify(@Html.Raw(Json.Encode(ViewBag.programa)));
        var facultad = JSON.stringify(@Html.Raw(Json.Encode(ViewBag.facultad)))
    </script>
}
<h2>Linea</h2>

<span>Sede </span>
<select name="sede" id="sede">
    <option value="">Seleccionar</option>
    @foreach (var i in ViewBag.sede)
    {
        <option value="@i.Id_Sede">@i.Nombre</option>
    }

</select>
<div id="facultad">
</div>
<div id="form">
    <form id="formContainer">
        <div id="programa">
        </div>
        <div>
            <span>Nombre de la Materia </span>
            <input type="text" id="Nombre" name="Nombre" />
        </div>
        <div>
            <span>Codigo de la Materia </span>
            <input type="text" id="Codigo" name="Codigo" />
        </div>
        <div>
            <a id="btnEnviar" class="link" href="#"><span>Enviar</span></a>
        </div>
    </form>
</div>

@if (@Model != null)
{
    <div id="Details">
        <h4>DETALLES</h4>
        <table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-bordered" id="tableDetails">
            <thead>
                <tr>
                    <td><strong>Id Materia</strong></td>
                    <td><strong>Materia</strong></td>
                    <td><strong>Programa</strong></td>
                    <td><strong>Agregar Modulo</strong></td>


                </tr>

            </thead>
            @foreach (var i in Model)
            {
                <tr>
                    <td>
                        @i.Id_Materia
                    </td>
                    <td>
                        @i.Nombre
                    </td>
                    <td>
                        @i.nombrePrograma
                    </td>
                     <td>@Html.ActionLink("Agregar Modulos", "InsertModulo", new { id = i.Id_Materia })</td>

                </tr>
            }
        </table>
    </div>
}
else
{
    <h3>No existen datos que Mostrar </h3>
}

