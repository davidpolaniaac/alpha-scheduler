@model AlphaScheduler.Models.ViewPensum

@{
    ViewBag.Title = "Materias";
}
@section scripts{

    <script src="~/Scripts/Proyecto/insertMaterias.js"></script>

}

<div id="containerDetail">
    <h2>Detalle de Pensum: @Model.Nombre</h2>

    <table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-bordered">
        <tr>
            <td><strong>Pensum</strong></td>
            <td>@Model.Nombre</td>
        </tr>
        <tr>
            <td><strong>Codigo</strong></td>
            <td>@Model.Codigo</td>
        </tr>

        <tr>
            <td><strong>Linea</strong></td>
            <td>@Model.nombreLinea</td>
        </tr>
        <tr>
            <td><strong>Programa</strong></td>
            <td>@Model.nombrePrograma </td>
        </tr>
        <tr>
            <td><strong>Facultad</strong></td>
            <td>@Model.nombreFacultad</td>
        </tr>
        <tr>
            <td><strong>Sede</strong></td>
            <td>@Model.nombreSede</td>
        </tr>
    </table>
    <div>
        <a id="btnMateria" class="link" href="~/Site/Materia"><span>Añadir materia nueva</span></a>
    </div>
</div>
<div id="form">
    <form id="formContainer">
          <div>
            <span>Id pensum </span>
            <input type="text" id="FK_Id_Pensum" name="FK_Id_Pensum" value="@Model.Id_Pensum" />
        </div>
        <span>Materia </span>
        <select name="FK_Id_Materia" id="FK_Id_Materia">
            <option value="">Seleccionar</option>
            @foreach (var i in ViewBag.materia)
            {
                <option value="@i.Id_Materia">@i.Nombre</option>
            }

        </select>
        <div>
            <span>Creditos </span>
            <input type="text" id="Creditos" name="Creditos" />
        </div>
        <div>
            <span>Semestre </span>
            <input type="text" id="semestre" name="semestre" />
        </div>
        <div>
            <a id="btnEnviar" class="link" href="#"><span>Enviar</span></a>
        </div>
    </form>
</div>

@if (@ViewBag.materiaPensum != null)
{
    <div id="Details">
        <h4>DETALLES</h4>
        <table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-bordered" id="tableDetails">
            <thead>
                <tr>
                    <td><strong>Sede</strong></td>
                    <td><strong>Pensum</strong></td>
                    <td><strong>Semestre</strong></td>
                    <td><strong>Materia</strong></td>
                    <td><strong>Programa</strong></td>



                </tr>

            </thead>
            @foreach (var i in ViewBag.materiaPensum)
            {
                <tr>
                    <td>
                        @i.nombreSede
                    </td>
                    <td>
                        @i.nombrePensum
                    </td>
                    <td>
                        @i.semestre
                    </td>
                    <td>
                        @i.nombreMateria
                    </td>
                    <td>
                        @i.nombrePrograma
                    </td>



                </tr>
            }
        </table>
    </div>
}
else
{
    <h3>No existen datos que Mostrar </h3>
}
