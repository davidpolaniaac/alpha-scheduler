@model IEnumerable<AlphaScheduler.Models.ViewFacultad>
@{
    ViewBag.Title = "Programa";
    //var Jsonfacultad = @Html.Raw(Json.Encode(Model));
}
@section scripts{

    <script src="~/Scripts/Proyecto/Programa.js"></script>
    <script>
    var facultad = JSON.stringify(@Html.Raw(Json.Encode(Model)));
    </script>

}
<h2>Programa</h2>

<span>Sede </span>
<select name="sede" id="sede">
    <option value="">Seleccionar</option>
    @foreach (var i in ViewBag.sede)
    {
        <option value="@i.Id_Sede">@i.Nombre</option>
    }
</select>

<div id="form">
    <form id="formContainer">
        <div id="facultad">
        </div>
        <div>
            <span>Nombre del programa </span>
            <input type="text" id="Nombre" name="Nombre" />
        </div>
        <div>
            <span>Codigo del programa </span>
            <input type="text" id="Codigo" name="Codigo" />
        </div>
        <div>
            <a id="btnEnviar" class="link" href="#"><span>Enviar</span></a>
        </div>
    </form>
</div>

@if (@ViewBag.programa != null)
{
    <div id="Details">
        <h4>DETALLES</h4>
        <table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-bordered" id="tableDetails">
            <thead>
                <tr>
                    <td><strong>Id Programa</strong></td>
                    <td><strong>Codigo Programa</strong></td>
                    <td><strong>Nombre Programa</strong></td>
                    <td><strong>Nombre facultad</strong></td>
                    <td><strong>Nombre sede</strong></td>

                </tr>

            </thead>
            @foreach (var i in ViewBag.programa)
            {
                <tr>
                    <td>
                        @i.Id_Programa
                    </td>
                    <td>
                        @i.Codigo
                    </td>
                    <td>
                        @i.Nombre
                    </td>
                    <td>
                        @i.nombreFacultad
                    </td>
                    <td>
                        @i.nombreSede
                    </td>

                </tr>
            }
        </table>
    </div>
}
else
{
    <h3>No existen datos que Mostrar </h3>
}


