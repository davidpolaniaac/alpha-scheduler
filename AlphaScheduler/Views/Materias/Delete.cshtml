@model AlphaScheduler.Models.Materia

@{
    ViewBag.Title = "Delete";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Delete Materia
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Forms</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">

                <h3 class="box-title">Are you sure you want to delete this?</h3>

            </div><!-- /.box-header -->
            <div>
                
                <dl class="dl-horizontal">
                    <br>
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Codigo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Codigo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Programa.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Programa.Nombre)
                    </dd>

                </dl>

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <div class="box-footer">
                            <p>


                                <input type="submit" value="Delete" class="btn btn-primary" /> |
                                <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Materias")';return false;">Back to List</button>

                            </p>
                        </div>
                    </div>
                }
            </div>
        </div><!-- /.box -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
